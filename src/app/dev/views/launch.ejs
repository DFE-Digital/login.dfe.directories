<div class="grid-row">
    <div class="col-12">
        <h1 class="heading-xlarge">
            Development Launcher
        </h1>
        <p class="lede">Hello, these helper actions are only enabled in development mode and are used to facilitate
            development and debugging of this service.</p>

        <h2 class="heading-medium">Users</h2>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th># Codes</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <% for (let i = 0; i < locals.users.length; i++) { %>
            <% const user = locals.users[i] %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.numCodes %></td>
                <td>
                    <span><a href="/manage/user/<%= user.id %>">View</a></span>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<% if (locals.numberOfPages > 1) { %>
<div class="grid-row">
    <div class="col-12">
        <div class="pagination">
            Page:
            <% for (let p = 1; p <= locals.numberOfPages; p++) { %>
            <div class="page">
                <% if (p === locals.currentPage) { %>
                <%= p %>
                <% } else { %>
                <a href="/manage?page=<%= p %>"><%= p %></a>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
</div>
<% } %>


<h2 class="heading-large">Routes</h2>
<ul>
    <% for(let i = 0; i < locals.routes.length; i++) {%>
    <% let route = locals.routes[i] %>
    <li class="route "><div class="method <%= route.methods[0].toLowerCase() %>"><%= route.methods[0] %></div><%= route.path %></li>
    <% } %>
</ul>

<style>
    .pagination {
        margin-top: 40px;
        text-align: right;
    }

    .pagination .page {
        display: inline-block;
        margin-left: 10px;
    }

    li.route {
        border: 1px solid #aaa;
        background-color: #eee;
        padding: 15px;
        margin: 5px 0;
    }

    li.route div.method {
        display: inline-block;
        margin: -15px;
        padding: 15px;
        margin-right: 15px;
        background-color: #777;
        color: #fff;
        font-weight: bold;
    }

    li.route div.method.get {
        background-color: #407669;

    }

    li.route div.method.post {
        background-color: #94aa65;

    }

</style>
